{
	"name": "SmartProxy",
	"version": "0.2",
	"manifest_version": 2,
	"author": "Salar Khalilzadeh",
	"description": "SmartProxy will automatically enable/disable proxy for the sites you visit, based on customizable patterns.",
	"homepage_url": "https://github.com/salarcode/SmartProxy",
	"icons": {
		"16": "icons/smartproxy-16.png",
		"24": "icons/smartproxy-24.png",
		"48": "icons/smartproxy-48.png",
		"96": "icons/smartproxy-96.png",
		"128": "icons/smartproxy-128.png"
	},
	"permissions": [
		"<all_urls>",
		"activeTab",
		"tabs",
		"proxy",
		"webRequest",
		"webRequestBlocking",
		"storage"
	],
	"browser_action": {
		"chrome_style": true,
		"default_title": "SmartProxy",
		"default_popup": "ui/popup.html",
		"default_icon": {
			"16": "icons/smartproxy-16.png",
			"24": "icons/smartproxy-24.png",
			"48": "icons/smartproxy-48.png",
			"96": "icons/smartproxy-96.png",
			"128": "icons/smartproxy-128.png"
		}
	},
	"background": {
		"scripts": [ "core-utils.js", "core-polyfill.js", "core-chrome-proxy.js", "core.js" ]
	},
	"options_ui": {
		"page": "ui/settings.html",
		"open_in_tab": true,
		"chrome_style": false
	},
	"minimum_chrome_version": "58"
}